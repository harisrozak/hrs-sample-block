{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "hrs-sample-block/hrs-sample-block",
	"version": "0.1.0",
	"title": "Sample WP Block",
	"category": "embed",
	"icon": "smiley",
	"description": "A sample WP Block plugin ",
	"supports": {
		"color": {
            "text": true,
            "background": true,
            "link": true
        },
		"spacing": {
			"margin": true,
			"padding": true
		}
	},
	"attributes": {
		"content": {
            "type": "string",
			"default": "Your content is here, go ahead edit directly."
        },
		"alignment": {
            "type": "string",
            "default": "initial"
        },
		"content_title": { 
			"type": "string", 
			"default": "Your title" 
		},
		"content_footer": { 
			"type": "string", 
			"default": "Your footer" 
		},
		"style": {
			"type": "object",
			"default": {
				"color": {
					"text": "#ffffff",
					"background": "#21759b"
				}
			}
		},       
		"padding": { 
			"type": "number", 
			"default": 25 
		},
		"post_type": { 
			"type": "string", 
			"default": "post" 
		},
		"posts_count": { 
			"type": "number", 
			"default": 5 
		}
	},
	"textdomain": "hrs-sample-block",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}